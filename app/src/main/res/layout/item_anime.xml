<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:clickable="false"
    android:focusable="false"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Cover image — left, taller -->
        <ImageView
            android:id="@+id/imageViewAnimeCover"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <!-- Title — top of the right section -->
        <TextView
            android:id="@+id/textViewAnimeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:maxLines="2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/buttonSubscribe"
            app:layout_constraintStart_toEndOf="@+id/imageViewAnimeCover"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Shingeki no Kyojin" />

        <!-- Studio -->
        <TextView
            android:id="@+id/textViewStudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/buttonSubscribe"
            app:layout_constraintStart_toEndOf="@+id/imageViewAnimeCover"
            app:layout_constraintTop_toBottomOf="@+id/textViewAnimeTitle"
            tools:text="MAPPA" />

        <!-- Score chip -->
        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_score_chip"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/imageViewAnimeCover"
            app:layout_constraintTop_toBottomOf="@+id/textViewStudio"
            tools:text="★ 87"
            tools:visibility="visible" />

        <!-- Episode count -->
        <TextView
            android:id="@+id/textViewEpisodes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintEnd_toStartOf="@+id/buttonSubscribe"
            app:layout_constraintStart_toEndOf="@+id/imageViewAnimeCover"
            app:layout_constraintTop_toBottomOf="@+id/textViewScore"
            tools:text="12 episodes" />

        <!-- Next airing -->
        <TextView
            android:id="@+id/textViewAiring"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            android:textColor="?attr/colorPrimary"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/buttonSubscribe"
            app:layout_constraintStart_toEndOf="@+id/imageViewAnimeCover"
            app:layout_constraintTop_toBottomOf="@+id/textViewEpisodes"
            tools:text="Ep 5 in 2d 4h"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/buttonSubscribe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="@string/subscribe"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
